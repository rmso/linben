<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color">

    <TextView
        android:id="@+id/t_nome"
        style="@style/LetrasPreta"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/sangue"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sangue"
        android:layout_marginTop="77dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/t_nome"
        android:layout_alignStart="@+id/t_nome"
        android:layout_below="@+id/t_nome"
        android:background="#61cdcdcd"
        android:clickable="false"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/t_tipo_sanguineo"
        style="@style/LetrasPreta"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/nome"
        android:layout_alignStart="@+id/nome"
        android:layout_below="@+id/nome"
        android:text="Tipo sanguineo" />


    <Spinner
        android:id="@+id/sangue"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#61cdcdcd"
        android:layout_below="@+id/t_tipo_sanguineo"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorMain" >
    </Spinner>

    <TextView
        android:id="@+id/t_sexo"
        style="@style/LetrasPreta"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/sangue"
        android:layout_alignStart="@+id/sangue"
        android:layout_below="@+id/sangue"
        android:text="GenÃªro" />

    <Spinner
        style="@style/LetrasVinho"
        android:id="@+id/sexo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="#61cdcdcd"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/t_sexo"
        android:textColor="@color/colorMain">
    </Spinner>


    <TextView
        android:id="@+id/t_data_nascimento"
        style="@style/LetrasPreta"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/t_sexo"
        android:layout_alignBottom="@+id/t_sexo"
        android:layout_alignLeft="@+id/dataN"
        android:layout_alignStart="@+id/dataN"
        android:text="Data de Nascimento" />

    <TextView
        android:id="@+id/textView"
        style="@style/LetrasPreta"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/sexo"
        android:text="Email" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#61cdcdcd"
        android:id="@+id/email"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorMain"/>

    <TextView
        android:id="@+id/senha"
        style="@style/LetrasPreta"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="17dp"
        android:text="Senha" />

    <EditText
        android:id="@+id/t_senha"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/senha"
        android:layout_alignStart="@+id/senha"
        android:layout_below="@+id/senha"
        android:layout_marginTop="13dp"
        android:background="#61cdcdcd"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/colorMain" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/sangue"
        android:layout_toRightOf="@+id/sangue"
        android:text="Novo Cadastro"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />


    <Button
        android:id="@+id/bt_salvar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/concluircad" />

    <EditText
        android:id="@+id/dataN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#61cdcdcd"
        android:ems="10"
        android:hint="DD/MM/YYYY"
        android:textColor="@color/colorMain"
        android:textColorHint="@color/colorMain" />

</RelativeLayout>
