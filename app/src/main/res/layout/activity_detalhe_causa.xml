<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samsung.linben.views.DetalheCausaActivity">

    <TextView
        android:id="@+id/tv_nome"
        style="@style/LetrasVinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/et_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Joana Pereira da Silva"
        android:layout_below="@id/tv_nome"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_tipo_sanguineo"
        style="@style/LetrasVinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo Sangíneo"
        android:layout_below="@id/et_nome"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/et_tipo_sanguineo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="A+"
        android:layout_below="@id/tv_tipo_sanguineo"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tv_tipo_doenca"
        style="@style/LetrasVinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Doença"
        android:layout_below="@id/et_tipo_sanguineo"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/et_tipo_doenca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Leucemia"
        android:layout_below="@id/tv_tipo_doenca"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:id="@+id/t_descricao"
        style="@style/LetrasVinho"
        android:textAlignment="center"
        android:layout_below="@id/et_tipo_doenca"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="#61cdcdcd"
        android:id="@+id/descricao"
        android:layout_below="@+id/t_descricao"
        android:textColor="@color/colorMain"
        android:gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"/>

</RelativeLayout>
