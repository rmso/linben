<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.samsung.linben.MenuActivity"
    tools:showIn="@layout/app_bar_menu">

  <!--  <include
        layout="@layout/list_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
-->

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="600dp"
            android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:background="@drawable/fotohome2"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:orientation="vertical"
                android:layout_weight="1.06"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/icon">

                <TextView
                    android:id="@+id/item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ana Paula"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    style="@style/LetrasVinho"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fui diagnosticada com leucemia, e atualmente encontro internada"
                    android:layout_marginLeft="10dp"

                    android:layout_below="@+id/sangue"
                    style="@style/LetrasCinza"
                    android:layout_alignStart="@+id/item"
                    android:layout_toStartOf="@+id/sangue"
                    android:layout_above="@+id/button2"
                    android:layout_marginBottom="10dp"
                    android:layout_alignEnd="@+id/sangue" />

                <TextView
                    android:id="@+id/sangue"
                    android:layout_width="40dp"
                    android:layout_height="34dp"
                    android:text="A+"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="right"
                    style="@style/LetrasVinho"
                    android:layout_alignTop="@+id/item"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/vermais"
                    android:id="@+id/button2"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
    </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:background="@drawable/fotohome3"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:orientation="vertical"
                    android:layout_weight="1.06"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/icon1">

                    <TextView
                        android:id="@+id/item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flávio"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="10dp"
                        android:padding="2dp"
                        style="@style/LetrasVinho"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição"
                        android:layout_marginLeft="10dp"

                        android:layout_below="@+id/sangue1"
                        style="@style/LetrasCinza"
                        android:layout_alignStart="@+id/item1"
                        android:layout_toStartOf="@+id/sangue1"
                        android:layout_above="@+id/vermais2"
                        android:layout_marginBottom="10dp"
                        android:layout_alignEnd="@+id/sangue1" />

                    <TextView
                        android:id="@+id/sangue1"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:text="AB+"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        style="@style/LetrasVinho"
                        android:layout_alignTop="@+id/item1"
                        android:layout_alignParentEnd="true" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/vermais"
                        android:id="@+id/vermais2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:background="@drawable/fotohome5"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:orientation="vertical"
                    android:layout_weight="1.06"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/icon2">

                    <TextView
                        android:id="@+id/item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roberto"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="10dp"
                        android:padding="2dp"
                        style="@style/LetrasVinho"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição"
                        android:layout_marginLeft="10dp"

                        android:layout_below="@+id/sangue2"
                        style="@style/LetrasCinza"
                        android:layout_alignStart="@+id/item2"
                        android:layout_toStartOf="@+id/sangue2"
                        android:layout_above="@+id/vermais3"
                        android:layout_marginBottom="10dp"
                        android:layout_alignEnd="@+id/sangue2" />

                    <TextView
                        android:id="@+id/sangue2"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:text="A-"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        style="@style/LetrasVinho"
                        android:layout_alignTop="@+id/item2"
                        android:layout_alignParentEnd="true" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/vermais"
                        android:id="@+id/vermais3"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:background="@drawable/fotohome1"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:orientation="vertical"
                    android:layout_weight="1.06"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/icon3">

                    <TextView
                        android:id="@+id/item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karla"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="10dp"
                        android:padding="2dp"
                        style="@style/LetrasVinho"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição"
                        android:layout_marginLeft="10dp"

                        android:layout_below="@+id/sangue3"
                        style="@style/LetrasCinza"
                        android:layout_alignStart="@+id/item3"
                        android:layout_toStartOf="@+id/sangue3"
                        android:layout_above="@+id/vermais4"
                        android:layout_marginBottom="10dp"
                        android:layout_alignEnd="@+id/sangue3" />

                    <TextView
                        android:id="@+id/sangue3"
                        android:layout_width="40dp"
                        android:layout_height="34dp"
                        android:text="O+"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="right"
                        style="@style/LetrasVinho"
                        android:layout_alignTop="@+id/item3"
                        android:layout_alignParentEnd="true" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/vermais"
                        android:id="@+id/vermais4"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </RelativeLayout>



        </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
