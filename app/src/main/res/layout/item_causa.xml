<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/info_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nome"
            style="@style/LetrasVinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Roberta Maria"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/info_2"
        android:layout_below="@id/info_1">

        <TextView
            style="@style/LetrasVinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doença:"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_tipo_doenca"
            style="@style/LetrasCinza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="Leucemina " />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/info_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/info_1"
            android:layout_alignParentRight="true">

            <TextView
                style="@style/LetrasVinho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="Tipo Sanguíneo:" />

            <TextView
                android:id="@+id/tv_tipo_sanguineo"
                style="@style/LetrasCinza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="A+" />
        </LinearLayout>


</RelativeLayout>