<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/janelapopup"
    android:weightSum="1">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:src="@drawable/fecharjanela"
        android:layout_weight="0.17"
        android:id="@+id/fechar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="193dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/negado"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/LetrasCinza"
        android:text="Acesso Negado!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="160dp"
        style="@style/LetrasCinza"
        android:text="Sem saldo de internet.Faça uma doação a alguém."
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/bt"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/doarpopup"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>