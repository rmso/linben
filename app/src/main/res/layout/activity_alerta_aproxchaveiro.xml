<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/janelapopup"
    android:weightSum="1">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:src="@drawable/fecharjanela"
        android:layout_weight="0.17"
        android:id="@+id/fechar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="175dp"
        android:layout_height="193dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/atencao"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="170dp"
        style="@style/LetrasCinza"
        android:text="Por Favor,
aproxime o chaveiro para liberar acesso!"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/aguardandonome"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/imageView5" />

</RelativeLayout>