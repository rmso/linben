<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:background="@drawable/toponovo"
        android:src ="@drawable/toponovo"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/voltarseta"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:background="@drawable/voltartopo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/ajuda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/duvidatopo"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/voltarseta"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/naousa"
        style="@style/LetrasPreta"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp" />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:src= "@drawable/fotohome2"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/naousa" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1.06"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/naousa"
        android:layout_toEndOf="@+id/icon">



        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ana Paula"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            style="@style/LetrasVinho"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:id="@+id/sangue"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:text="A+"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/item"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="63dp"
            style="@style/LetrasVinho"/>


    </RelativeLayout>


    <VideoView
        android:layout_width="370dp"

        android:layout_height="280dp"
        android:id="@+id/videoView"
        android:clickable="false"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Fui diagnosticada com leucemia, e atualmente me encontro internada no Hospital de Sao Marcos. "
        android:id="@+id/textView8"
        android:textColor="@color/colorMain"
        android:layout_below="@+id/relativeLayout"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/videoView"
        android:layout_alignStart="@+id/videoView" />

    <Button
        android:id="@+id/botao"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/doarapoio"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/videoView"
        android:layout_alignEnd="@+id/videoView"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/botao2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/divulgarapoio"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/botao"
        android:layout_toEndOf="@+id/voltarseta" />

</RelativeLayout>