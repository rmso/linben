<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:background="@drawable/sobre"
        android:src ="@drawable/sobre"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/voltarseta"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:background="@drawable/voltartopo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/ajuda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/duvidatopo"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/voltarseta"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/imageLogo"
        android:background="@drawable/logosobre"

        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="VersÃ£o 1.0"
        android:layout_width="90dp"
        android:layout_height="35dp"
        style="@style/LetrasVinho"
        android:id="@+id/t_versao"
        android:layout_below="@+id/imageLogo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imagetex"
        android:background="@drawable/textosobre"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_below="@+id/t_versao"
        android:layout_alignParentStart="true" />

</RelativeLayout>