<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:background="@drawable/hemocentros"
        android:src ="@drawable/hemocentros"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/voltarseta"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:background="@drawable/voltartopo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/ajuda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/duvidatopo"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/voltarseta"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:id="@+id/texto"
        android:background="@drawable/hemocentrotexto"
        android:baselineAlignBottom="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/mapa"
        android:background="@drawable/mapa"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/texto"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="390dp"
        android:layout_height="20dp"
        android:id="@+id/endereco"
        android:background="@drawable/endereco"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/mapa"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>