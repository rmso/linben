<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:layout_weight="1.06"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon">

        <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"
            android:padding="2dp"
        style="@style/LetrasVinho"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:layout_marginLeft="10dp"

            android:layout_below="@+id/sangue"
            style="@style/LetrasCinza"
            android:layout_alignStart="@+id/item"
            android:layout_toStartOf="@+id/sangue"
            android:layout_above="@+id/button2"
            android:layout_marginBottom="10dp"
            android:layout_alignEnd="@+id/sangue" />

        <TextView
            android:id="@+id/sangue"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:text="A+"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            style="@style/LetrasVinho"
            android:layout_alignTop="@+id/item"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/vermais"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>


</LinearLayout>