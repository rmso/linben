<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:background="@drawable/topo"
        android:src ="@drawable/topo"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/voltarseta"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:background="@drawable/voltartopo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/ajuda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/duvidatopo"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/voltarseta"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/naousa"
        style="@style/LetrasPreta"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/gota"
        android:background="@drawable/gota"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignTop="@+id/editText2"
        android:layout_toStartOf="@+id/textView10" />


    <TextView
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text="Critérios de doação"
        android:id="@+id/textView9"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quem pode doar sangue ?"
        android:id="@+id/textView10"
        android:textColor="@color/colorMain"
        android:layout_below="@+id/naousa"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:textColor="@color/colorMain"
        android:text="A pessoa deve ter, no mínimo, 16 anos completos e no máximo 69 anos"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView9"
        android:textSize="18dp"
        android:layout_alignEnd="@+id/ajuda" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/imageView2"
        android:background="@drawable/gota"
        android:baselineAlignBottom="false"
        android:clickable="false"
        android:layout_below="@+id/gota"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/imageView7"
        android:background="@drawable/gota"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView8" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:ems="10"
        android:id="@+id/editText"
        android:textColor="@color/colorMain"
        android:text="Deve pesar no mínimo 50 kg"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="18dp"
        android:textColor="@color/colorMain"
        android:text="Não pode ter tatuagens ou piercing recentes (no mínimo, 1 ano)"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignStart="@+id/editText" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/imageView8"
        android:background="@drawable/gota"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignTop="@+id/editText4"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText4"
        android:textSize="18dp"
        android:textColor="@color/colorMain"
        android:text="Não pode ter ingerido bebida alcoólica nas últimas 12 horas"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Você está ciente dos critérios para a doação?"
        android:id="@+id/textView11"
        android:textColor="@color/colorMain"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/ajuda"
        android:layout_marginTop="46dp" />

    <Button
        android:id="@+id/nao"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/nao"
        android:src ="@drawable/nao"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginTop="29dp" />

    <Button
        android:id="@+id/sim"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/sim"
        android:src ="@drawable/sim"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/nao"
        android:layout_toEndOf="@+id/naousa" />



</RelativeLayout>