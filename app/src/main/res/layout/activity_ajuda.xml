<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="true"
    android:contextClickable="true"
    android:focusableInTouchMode="false"
    android:background="@color/color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:background="@drawable/topo"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text="Ajuda"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_above="@+id/t_nome"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color"
        android:layout_marginTop="5dp" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/one"
        android:background="@drawable/um"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/dois"
        android:background="@drawable/dois"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <ImageView
         android:layout_width="fill_parent"
         android:layout_height="300dp"
         android:id="@+id/tres"
         android:background="@drawable/tres"
         android:baselineAlignBottom="false"
         android:layout_below="@+id/textView7"
         android:layout_alignParentStart="true" />

    <ImageView
         android:layout_width="fill_parent"
         android:layout_height="300dp"
         android:id="@+id/quatro"
         android:background="@drawable/quatro"
         android:baselineAlignBottom="false"
         android:layout_below="@+id/textView7"
         android:layout_alignParentStart="true" />

    <ImageView
         android:layout_width="fill_parent"
         android:layout_height="300dp"
         android:id="@+id/cinco"
         android:background="@drawable/cinco"
         android:baselineAlignBottom="false"
         android:layout_below="@+id/textView7"
         android:layout_alignParentStart="true" />

    <ImageView
         android:layout_width="fill_parent"
         android:layout_height="300dp"
         android:id="@+id/seis"
         android:background="@drawable/seis"
         android:baselineAlignBottom="false"
         android:layout_below="@+id/textView7"
         android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
